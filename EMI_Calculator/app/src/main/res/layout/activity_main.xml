<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_principal"
            android:padding="20dp"
            android:textColor="@color/colorAccent"
            tools:layout_conversion_absoluteHeight="59dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_conversion_absoluteWidth="133dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:inputType="numberDecimal"
            android:id="@+id/principal"
            tools:layout_conversion_absoluteHeight="45dp"
            tools:layout_editor_absoluteY="59dp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_conversion_absoluteWidth="300dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_rate"
            android:padding="20dp"
            android:textColor="@color/colorAccent"
            tools:layout_conversion_absoluteHeight="59dp"
            tools:layout_editor_absoluteY="104dp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_conversion_absoluteWidth="106dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:width="300dp"
            android:id="@+id/rate"
            tools:layout_conversion_absoluteHeight="45dp"
            tools:layout_editor_absoluteY="164dp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_conversion_absoluteWidth="300dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_time"
            android:padding="20dp"
            android:textColor="@color/colorAccent"
            tools:layout_conversion_absoluteHeight="59dp"
            tools:layout_editor_absoluteY="209dp"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_conversion_absoluteWidth="109dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:width="300dp"
            android:id="@+id/time"
            tools:layout_conversion_absoluteHeight="45dp"
            tools:layout_editor_absoluteY="268dp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_conversion_absoluteWidth="300dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/submit"
            android:id="@+id/submit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emi"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>