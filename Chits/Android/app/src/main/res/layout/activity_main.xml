<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MADTL CHITS"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="@color/colorAccent"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"

            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Calulator"
                android:layout_marginRight="20dp"
                android:id="@+id/calculator"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Factorial"
                android:layout_marginRight="20dp"
                android:id="@+id/factorial"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Prime"
                android:id="@+id/prime"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Palindrome(str)"
                android:layout_marginRight="20dp"
                android:id="@+id/str_palindrome"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Reverse"
                android:layout_marginRight="20dp"
                android:id="@+id/reverse"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6. SI, CI"
                android:id="@+id/interest"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7. Circle"
                android:layout_marginRight="20dp"
                android:id="@+id/circle"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8. Rect/Square"
                android:layout_marginRight="20dp"
                android:id="@+id/rect_square"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9. Fact(recur)"
                android:id="@+id/fact_recur"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10. Largest"
                android:layout_marginRight="20dp"
                android:id="@+id/largest"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11. Armstrong"
                android:layout_marginRight="20dp"
                android:id="@+id/armstrong"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12. Arm(print)"
                android:id="@+id/display_armstrong"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13. Palin(num)"
                android:layout_marginRight="20dp"
                android:id="@+id/num_palindrome"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14. Fibonacci"
                android:layout_marginRight="20dp"
                android:id="@+id/fibo"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15. Date"
                android:id="@+id/date"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>